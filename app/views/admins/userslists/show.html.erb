<article class="m-5">
  <h1 class="h1">用戶詳情</h1>
  <p>
    ID:<%= @userslist.id %>
  </p>  
  <p>
    Email: <%= @userslist.email %>
  </p>
  <p>
    Created at: <%= @userslist.created_at.strftime('%Y-%m/%d') %>
  </p>

  <h2 class="font-semibold my-5">最新預定活動</h2>
  <ul>
    <% @latest_bookings.each do |booking| %>
      <% if booking.end_time.present? %>
        <li class="m-3">
          內容: <%= booking.content %>
          <br>
          預訂日期: <%= booking.end_time&.strftime('%F-%R') %>
          <br>
          預訂花費時長: <%= booking.booking_period %>
        </li>
      <% end %>
    <% end %>
  </ul>
</article>
