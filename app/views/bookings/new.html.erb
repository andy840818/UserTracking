<h1 class="h1">Details</h1>
<%= form_with(model: @booking, local: true, data: { turbo: false }) do |f| %>

  <div>
    <%= f.hidden_field :user_id, value: current_user.id %>

    <%= f.label :content, '不加辣' %>
    <%= f.radio_button :content, '不加辣' %>

    <%= f.label :content, '加辣' %>
    <%= f.radio_button :content, '加辣' %>
  </div>

  <div>
    <%= f.submit 'Booking', class:'text-blue-500 hover:text-blue-300 cursor-pointer' %>
  </div>

<% end %>
